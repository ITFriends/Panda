<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />


    <environment include="Development">
        <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/fontawesome/css/all.css">
        <script src="~/jquery/jquery.js"></script>
    </environment>

    <environment include="Production">
        <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
        <script src="~/jquery/jquery.min.js"></script>
    </environment>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top top-menu">
            <a class="mx-2" href="@Url.Action("Index","Home")"><i class="fas fa-paw fa-2x text-light"></i></a>
            <button class="navbar-toggler nav-button" type="button" data-toggle="collapse" data-target="#TopNav">
                <div class="bg-light line1"></div>
                <div class="bg-light line2"></div>
                <div class="bg-light line3"></div>
            </button>
            <div class="collapse navbar-collapse justify-content-end text-uppercase" id="TopNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link mr-4 p-2 top-menu__item" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link mr-4 p-2 top-menu__item" href="#">Pet Hotel</a></li>
                    <li class="nav-item"><a class="nav-link mr-4 p-2 top-menu__item" href="#">Events</a></li>
                    <li class="nav-item"><a class="nav-link mr-4 p-2 top-menu__item" href="#">Sign In</a></li>
                    <li class="nav-item"><a class="nav-link mr-2 p-2 top-menu__item__signup" href="#">Sign Up</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>
   
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
